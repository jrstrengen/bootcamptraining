{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "string",
            "metadata": {
                "description": "Administrator Password"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[toLower('opervm01storage')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "opervm01 Storage Account"
            },
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "name": "opervm01-PublicIP",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower('opervm01')]"
                }
            }
        },
        {
            "name": "opervm01-VirtualNetwork",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "opervm01-VirtualNetwork"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "opervm01-VirtualNetwork-Subnet",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "opervm01-NetworkInterface",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'opervm01-PublicIP')]",
                "[resourceId('Microsoft.Network/virtualNetworks', 'opervm01-VirtualNetwork')]"
            ],
            "tags": {
                "displayName": "opervm01-NetworkInterface"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'opervm01-PublicIP')]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'opervm01-VirtualNetwork', 'opervm01-VirtualNetwork-Subnet')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "opervm01",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', toLower('opervm01storage'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', 'opervm01-NetworkInterface')]"
            ],
            "tags": {
                "displayName": "opervm01"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B1S"
                },
                "osProfile": {
                    "computerName": "opervm01",
                    "adminUsername": "adminUsername",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "opervm01-OSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'opervm01-NetworkInterface')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "publicIP": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses','opervm01-PublicIP')).dnsSettings.fqdn]"
        }
    }
}